.clearBtn {
    width: 750rpx;
    height: 90rpx;
    border: 1px solid black;
    border-radius: 0;

    font-size: 32rpx;
    background-color: #ffffff;
    padding: 0;
    margin: 0;
    line-height: 1.6;
    text-align: start;
    color: #000000;

    display: flex;
    justify-content: center;
    align-items: center;

}
.clearBtn-hover {
    color: rgba(0, 0, 0, 1);
    background-color: #FFF;
}
.clearBtn::after {
    border: none;
}
